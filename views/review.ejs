<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Reviews</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="mt-5">Reviews</h1>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(err) { %>
                    <p><%= err %></p>
                <% }); %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(msg) { %>
                    <p><%= msg %></p>
                <% }); %>
            </div>
        <% } %>

        <% const isAdmin = user && user.role === 'admin'; %>
        <p class="text-muted">
            <% if (isAdmin) { %>
                Showing all reviews.
            <% } else { %>
                Showing your reviews.
            <% } %>
        </p>

        <% if (!reviews || reviews.length === 0) { %>
            <div class="alert alert-info">No reviews found.</div>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
                <% reviews.forEach(function(r) { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <% if (r.productImage) { %>
                                    <div class="text-center mb-3">
                                        <img src="/images/<%= r.productImage %>" alt="<%= r.productName || ('Product #' + r.product_id) %>" class="img-fluid rounded" style="max-height: 120px; width: auto; object-fit: contain;">
                                    </div>
                                <% } %>
                                <h5 class="card-title">
                                    <%= r.productName || ('Product #' + r.product_id) %>
                                </h5>
                                <p class="card-text mb-1"><strong>Rating:</strong> <%= r.rating %> / 5</p>
                                <p class="card-text mb-2"><strong>Review:</strong> <%= r.review_text || 'â€”' %></p>
                                <p class="card-text mb-1"><strong>Date:</strong> <%= r.review_date ? new Date(r.review_date).toLocaleString() : 'N/A' %></p>
                                <% if (isAdmin) { %>
                                    <p class="card-text mb-0"><strong>User:</strong> <%= r.userName || ('User #' + r.user_id) %> (<%= r.userEmail || 'N/A' %>)</p>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                                <form action="/reviews/<%= r.review_id %>/delete" method="POST" onsubmit="return confirm('Delete this review?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
