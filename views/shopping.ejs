<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <%- include('partials/navbar') %>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-3 gap-2">
      <div class="flex-grow-1">
        <h2 class="m-0 text-center text-lg-start">Products from Supermarket</h2>
      </div>
      <form class="d-flex w-100 w-lg-auto" action="/search/results" method="GET" role="search">
        <input class="form-control me-2" type="search" name="q" placeholder="Search products..." aria-label="Search">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </form>
      <% if (typeof categoryId !== 'undefined' && categoryId) { %>
        <div>
          <a href="/categories" class="btn btn-outline-secondary btn-sm">Back to categories</a>
        </div>
      <% } %>
    </div>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Product Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <% if (user.role !== 'admin') { %>
              <th width="50">Quantity</th>
              <th width="50">Buy</th>
            <% } %>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td><a href="/product/<%= products[i].productid %>" ><%= products[i].productName %></a></td>
            <td><img src="/images/<%= products[i].image %>" width="20%"></td>
            <td><%= products[i].quantity %></td>
            <td>$<%= products[i].price.toFixed(2) %></td>
            <% if (user.role !== 'admin') { %>
              <td>
                <select class="form-control" onchange="document.getElementById('quantity-<%= products[i].productid %>').value = this.value">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </td>

              <td>
                  <form action="/add-to-cart/<%= products[i].productid %>" method="POST">
                    <input type="hidden" name="quantity" id="quantity-<%= products[i].productid %>" value="1">
                    <button type="submit" class="btn btn-primary mt-3">Buy</button>
                  </form>
              </td>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
