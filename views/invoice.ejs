<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <%- include('partials/navbar') %>
   
  <!-- Invoice Content -->
  <main class="container my-5">
    <h2>Payment Invoice</h2>
    <p>Thank you for your payment, <%= user ? user.username : 'User' %>!</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; products.forEach(product => { total += Number(product.amount); %>
          <tr>
            <td class="d-flex align-items-center">
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="me-2 rounded" style="width: 60px; height: 60px; object-fit: cover;">
              <% } %>
              <span><%= product.productName %></span>
            </td>
            <td><%= product.quantity %></td>
            <td>$<%= Number(product.amount).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2" class="text-end"><strong>Total Paid</strong></td>
          <td><strong>$<%= Number(total).toFixed(2)  %></strong></td>
        </tr>
      </tfoot>
    </table>
    <a href="/" class="btn btn-primary">Back to Home</a>
  </main>
</body>
</html>
