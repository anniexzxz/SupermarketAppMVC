<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
   
  <!-- Invoice Content -->
  <main class="container my-5">
    <h2>Payment Invoice</h2>
    <p>Thank you for your payment, <%= user ? user.username : 'User' %>!</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; products.forEach(product => { total += Number(product.amount); %>
          <tr>
            <td><%= product.productName %></td>
            <td><%= product.quantity %></td>
            <td>$<%= Number(product.amount).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2" class="text-end"><strong>Total Paid</strong></td>
          <td><strong>$<%= Number(total).toFixed(2)  %></strong></td>
        </tr>
      </tfoot>
    </table>
    <a href="/" class="btn btn-primary">Back to Home</a>
  </main>
</body>
</html>