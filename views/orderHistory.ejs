<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Order History</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="mt-5">Order History</h1>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(err) { %>
                    <p><%= err %></p>
                <% }); %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(msg) { %>
                    <p><%= msg %></p>
                <% }); %>
            </div>
        <% } %>

        <% const userOrders = (orders || []).filter(o => !user || o.userId === user.userid); %>

        <% if (!userOrders.length) { %>
            <div class="alert alert-info">No orders found.</div>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
                <% userOrders.forEach(function(order) { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Order #<%= order.orderHistory_id %>
                                </h5>
                                <p class="card-text mb-1"><strong>Product:</strong> <%= order.productName || ('Product #' + order.productId) %></p>
                                <p class="card-text mb-1"><strong>Quantity:</strong> <%= order.quantity %></p>
                                <p class="card-text mb-1"><strong>Price:</strong> $<%= Number(order.price).toFixed(2) %></p>
                                <p class="card-text mb-2"><strong>Order Date:</strong> <%= order.order_date ? new Date(order.order_date).toLocaleString() : 'N/A' %></p>

                                <div class="accordion" id="orderActions-<%= order.orderHistory_id %>">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingReview-<%= order.orderHistory_id %>">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReview-<%= order.orderHistory_id %>" aria-expanded="false" aria-controls="collapseReview-<%= order.orderHistory_id %>">
                                                Write a Review
                                            </button>
                                        </h2>
                                        <div id="collapseReview-<%= order.orderHistory_id %>" class="accordion-collapse collapse" aria-labelledby="headingReview-<%= order.orderHistory_id %>" data-bs-parent="#orderActions-<%= order.orderHistory_id %>">
                                            <div class="accordion-body">
                                                <form action="/orderHistory/<%= order.orderHistory_id %>/review" method="POST">
                                                    <div class="mb-3">
                                                        <label for="review-<%= order.orderHistory_id %>" class="form-label">Review</label>
                                                        <textarea class="form-control" id="review-<%= order.orderHistory_id %>" name="review" rows="3" required></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary btn-sm">Submit Review</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingRate-<%= order.orderHistory_id %>">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRate-<%= order.orderHistory_id %>" aria-expanded="false" aria-controls="collapseRate-<%= order.orderHistory_id %>">
                                                Rate the Order
                                            </button>
                                        </h2>
                                        <div id="collapseRate-<%= order.orderHistory_id %>" class="accordion-collapse collapse" aria-labelledby="headingRate-<%= order.orderHistory_id %>" data-bs-parent="#orderActions-<%= order.orderHistory_id %>">
                                            <div class="accordion-body">
                                                <form action="/orderHistory/<%= order.orderHistory_id %>/rate" method="POST">
                                                    <div class="mb-3">
                                                        <label for="rating-<%= order.orderHistory_id %>" class="form-label">Rating</label>
                                                        <select class="form-select" id="rating-<%= order.orderHistory_id %>" name="rating" required>
                                                            <option value="" disabled selected>Select rating</option>
                                                            <option value="1">1 Star</option>
                                                            <option value="2">2 Stars</option>
                                                            <option value="3">3 Stars</option>
                                                            <option value="4">4 Stars</option>
                                                            <option value="5">5 Stars</option>
                                                        </select>
                                                    </div>
                                                    <button type="submit" class="btn btn-secondary btn-sm">Submit Rating</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                                <form action="/orderHistory/<%= order.orderHistory_id %>/delete" method="POST" onsubmit="return confirm('Delete this order?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete Order</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
