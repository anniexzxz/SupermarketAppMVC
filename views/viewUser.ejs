<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>User Management</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-3">
      <div>
        <h2 class="mb-1">User Management</h2>
        <p class="text-muted mb-0">View, update, or delete user accounts.</p>
      </div>
      <% if (user && user.role === 'admin') { %>
        <a class="btn btn-success mt-3 mt-md-0" href="/register">Add User</a>
      <% } %>
    </div>

    <% if (messages && messages.length) { %>
      <div class="alert alert-success" role="alert">
        <%= messages.join('<br>') %>
      </div>
    <% } %>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger" role="alert">
        <%= errors.join('<br>') %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>

    <% if (user && user.role === 'admin') { %>
      <div class="row">
        <div class="col-lg-5 mb-3">
          <div class="card h-100">
            <div class="card-header">All Users</div>
            <div class="card-body p-0">
              <% if (users && users.length) { %>
                <div class="table-responsive">
                  <table class="table table-hover mb-0 align-middle text-center">
                    <thead class="table-light">
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(function(u){ %>
                        <tr class="<%= selectedUser && selectedUser.userid === u.userid ? 'table-active' : '' %>">
                          <td class="text-start"><%= u.username %></td>
                          <td class="text-break"><%= u.email %></td>
                          <td>
                            <span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-secondary' %> text-uppercase"><%= u.role %></span>
                          </td>
                          <td class="text-nowrap">
                            <a class="btn btn-sm btn-outline-primary" href="/users?selected=<%= u.userid %>">View</a>
                            <a class="btn btn-sm btn-outline-danger" href="/deleteUser/<%= u.userid %>" onclick="return confirm('Delete this user account?');">Delete</a>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <div class="p-3 text-muted">No users available.</div>
              <% } %>
            </div>
          </div>
        </div>

        <div class="col-lg-7">
          <% if (selectedUser) { %>
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>User Details</span>
                <a class="btn btn-sm btn-outline-secondary" href="/users">Clear selection</a>
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="col-md-6">
                    <p class="mb-1"><strong>User ID:</strong> <%= selectedUser.userid %></p>
                    <p class="mb-1"><strong>Email:</strong> <%= selectedUser.email %></p>
                    <p class="mb-1"><strong>Role:</strong> <%= selectedUser.role %></p>
                  </div>
                  <div class="col-md-6">
                    <p class="mb-1"><strong>Address:</strong> <%= selectedUser.address || 'N/A' %></p>
                    <p class="mb-1"><strong>Contact:</strong> <%= selectedUser.contact || 'N/A' %></p>
                  </div>
                </div>
                <hr>
                <h5 class="mb-3">Update Details</h5>
                <form action="/editUser/<%= selectedUser.userid %>" method="POST" class="row g-3">
                  <div class="col-md-6">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="<%= selectedUser.username %>" required>
                  </div>
                  <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= selectedUser.email %>" required>
                  </div>
                  <div class="col-md-6">
                    <label for="role" class="form-label">Role</label>
                    <select id="role" name="role" class="form-select">
                      <option value="user" <%= selectedUser.role === 'user' ? 'selected' : '' %>>User</option>
                      <option value="admin" <%= selectedUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%= selectedUser.address || '' %>">
                  </div>
                  <div class="col-md-6">
                    <label for="contact" class="form-label">Contact</label>
                    <input type="text" class="form-control" id="contact" name="contact" value="<%= selectedUser.contact || '' %>">
                  </div>
                  <div class="col-12 d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" href="/users">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update User</button>
                  </div>
                </form>
                <hr class="my-4">
                <form action="/deleteUser/<%= selectedUser.userid %>" method="GET" onsubmit="return confirm('Delete this user account? This cannot be undone.');">
                  <button type="submit" class="btn btn-outline-danger">Delete Account</button>
                </form>
              </div>
            </div>
          <% } else { %>
            <div class="alert alert-info">Select a user from the table to view and edit details.</div>
          <% } %>
        </div>
      </div>
    <% } else if (selectedUser) { %>
      <div class="card">
        <div class="card-header">Your Profile</div>
        <div class="card-body">
          <p class="mb-1"><strong>Name:</strong> <%= selectedUser.username %></p>
          <p class="mb-1"><strong>Email:</strong> <%= selectedUser.email %></p>
          <p class="mb-1"><strong>Address:</strong> <%= selectedUser.address || 'N/A' %></p>
          <p class="mb-1"><strong>Contact:</strong> <%= selectedUser.contact || 'N/A' %></p>
          <p class="mb-0"><strong>Role:</strong> <%= selectedUser.role %></p>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-warning">You do not have permission to manage users.</div>
    <% } %>
  </div>
</body>
</html>
