<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Contact Us</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="mb-0">Contact Us</h3>
      <% if (user && user.role === 'admin') { %>
        <span class="badge bg-dark">Admin View</span>
      <% } %>
    </div>

    <% if (error && user && user.role === 'admin') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Submission form (always visible) -->
    <% if (!(user && user.role === 'admin')) { %>
      <div class="card mb-4">
        <div class="card-header">Send us a message</div>
        <div class="card-body">
          <form action="/contact" method="POST" class="row g-3">
            <div class="col-md-6">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= (message && message.name) || (user ? user.username : '') %>" required>
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= (message && message.email) || (user ? user.email : '') %>" required>
            </div>
            <div class="col-12">
              <label for="message_text" class="form-label">Message</label>
              <textarea class="form-control" id="message_text" name="message_text" rows="4" required><%= (message && message.message_text) || '' %></textarea>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Admin list -->
    <% if (user && user.role === 'admin') { %>
      <div class="card">
        <div class="card-header">Messages</div>
        <div class="card-body p-0">
          <% if (messages && messages.length) { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% messages.forEach(function(msg){ %>
                    <tr>
                      <td><%= msg.message_id %></td>
                      <td><%= msg.name %></td>
                      <td><%= msg.email %></td>
                      <td class="text-wrap" style="max-width: 300px;"><%= msg.message_text %></td>
                      <td><%= msg.submitted_at ? msg.submitted_at.toISOString ? msg.submitted_at.toISOString().slice(0,19).replace('T',' ') : msg.submitted_at : '' %></td>
                      <td>
                        <form action="/contact/<%= msg.message_id %>" method="POST" class="d-flex gap-2 align-items-center">
                          <input type="hidden" name="name" value="<%= msg.name %>">
                          <input type="hidden" name="email" value="<%= msg.email %>">
                          <input type="hidden" name="message_text" value="<%= msg.message_text %>">
                          <select name="status" class="form-select form-select-sm" style="max-width: 140px;">
                            <option value="Unresolved" <%= msg.status === 'Unresolved' ? 'selected' : '' %>>Unresolved</option>
                            <option value="In Progress" <%= msg.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="Clear" <%= msg.status === 'Clear' ? 'selected' : '' %>>Clear</option>
                          </select>
                          <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                        </form>
                      </td>
                      <td>
                        <form action="/contact/<%= msg.message_id %>/delete" method="POST" onsubmit="return confirm('Delete this message?');">
                          <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="p-3 text-muted">No messages yet.</div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
