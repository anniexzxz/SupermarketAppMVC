<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <%- include('partials/navbar') %>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(err) { %><div><%= err %></div><% }); %>
      </div>
    <% } %>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(msg) { %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr class="text-center">
            <th width="150">Product</th>
            <th width="150">Image</th>
            <th width="120">Unit Price</th>
            <th width="200">Quantity</th>
            <th width="140">Subtotal</th>
            <th width="200">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(function(item) { %>
            <tr>
                <td><%= item.productName %></td>
                <td class="text-center"><img src="/images/<%= item.image %>" width="80" class="img-thumbnail"></td>
                <td class="text-center">$<%= Number(item.price).toFixed(2) %></td>
                <td>
                  <form action="/cart/update" method="POST" class="d-flex align-items-center gap-2 justify-content-center">
                    <input type="hidden" name="productId" value="<%= item.productId %>">
                    <input type="number" name="quantity" min="1" <%= item.availableQuantity ? 'max=\"' + item.availableQuantity + '\"' : '' %> value="<%= item.quantity %>" class="form-control form-control-sm" style="width: 90px;">
                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                  </form>
                </td>
                <td class="text-center">$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
                <td class="text-center">
                  <form action="/cart/remove" method="POST" onsubmit="return confirm('Remove this item?');">
                    <input type="hidden" name="productId" value="<%= item.productId %>">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                  </form>
                </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <h4>Total: $<%= Number(total || 0).toFixed(2) %></h4>

      <div class="d-flex gap-2 mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
        <form action="/cart/clear" method="POST">
          <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
        </form>
        <form action="/cart/checkout" method="POST">
          <button type="submit" class="btn btn-primary">Check Out</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>
