<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Search Results</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h3 class="mb-0">Search Results</h3>
        <% if (keyword) { %>
          <small class="text-muted">for "<%= keyword %>"</small>
        <% } %>
      </div>
      <form class="d-flex" action="/search/results" method="GET">
        <input class="form-control me-2" type="search" name="q" placeholder="Search products..." value="<%= keyword || '' %>">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </form>
    </div>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (message) { %>
      <div class="alert alert-info"><%= message %></div>
    <% } %>

    <% if (results && results.length) { %>
      <div class="row g-3">
        <% results.forEach(function(product) { %>
          <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
              <div class="p-3">
                <% if (product.image) { %>
                  <div class="ratio ratio-1x1 bg-white rounded shadow-sm d-flex align-items-center justify-content-center overflow-hidden">
                    <img src="/images/<%= product.image %>" alt="<%= product.productName %>" style="max-width: 90%; max-height: 90%; object-fit: contain;">
                  </div>
                <% } else { %>
                  <div class="ratio ratio-1x1 bg-light rounded d-flex align-items-center justify-content-center" style="color: #999;">No image</div>
                <% } %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><a href="/product/<%= product.productid %>"><%= product.productName %></a></h5>
                <p class="card-text mb-1 text-muted">Price: $<%= Number(product.price || 0).toFixed(2) %></p>
                <% if (product.description) { %>
                  <p class="card-text small text-truncate-2"><%= product.description %></p>
                <% } %>
                <% if (user && user.role === 'admin') { %>
                  <div class="d-flex gap-2 mt-2">
                    <a href="/editProduct/<%= product.productid %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                    <a href="/deleteProduct/<%= product.productid %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this product?');">Delete</a>
                  </div>
                <% } else { %>
                  <form action="/add-to-cart/<%= product.productid %>" method="POST" class="mt-2">
                    <div class="input-group input-group-sm">
                      <input type="number" name="quantity" min="1" value="1" class="form-control" style="max-width: 80px;">
                      <button type="submit" class="btn btn-primary">Buy</button>
                    </div>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else if (!error && !message) { %>
      <div class="alert alert-info">No results found.</div>
    <% } %>
  </div>
</body>
</html>
