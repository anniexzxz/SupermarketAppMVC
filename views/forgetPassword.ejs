<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App - Reset Password</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="mt-5">Reset Password</h1>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/forgetPassword" method="POST" class="mt-4">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="form-group mt-3">
                <label for="password">New Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
                <small class="form-text text-muted">Password should be at least 6 characters long.</small>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
            <a href="/login" class="btn btn-link mt-3">Back to Login</a>
        </form>
    </div>
</body>
</html>
